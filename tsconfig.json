{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "types": ["node"]
    },
    "include": ["src/**/*", "**/*.test.ts"],
    "exclude": ["./node_modules"]
}
